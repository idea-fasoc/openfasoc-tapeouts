################################################################################
# AL. xschem settings
################################################################################
#
# Define PDK_ROOT and PDKPATH in your environment settings
# 
set PDK_ROOT $env(PDK_ROOT)
set PDKPATH $env(PDKPATH)
set XSCHEM_LIBRARY_PATH {}
append XSCHEM_LIBRARY_PATH ${XSCHEM_SHAREDIR}/xschem_library
append XSCHEM_LIBRARY_PATH :$env(PWD)
append XSCHEM_LIBRARY_PATH :$PDKPATH/libs.tech/xschem
append XSCHEM_LIBRARY_PATH :$USER_CONF_DIR/xschem_library 
set XSCHEM_START_WINDOW {tests/0_top.sch}
set netlist_type spice
set netlist_dir .
set autotrim_wires 1
set to_pdf {ps2pdf -dAutoRotatePages=/None}
set editor {gvim -f -geometry 90x28}
set bespice_listen_port 2023
lappend tcl_files ${XSCHEM_SHAREDIR}/ngspice_backannotate.tcl
set toolbar_visible 1
set tabbed_interface 1
set 180MCU_MODELS ${PDKPATH}/libs.tech/ngspice
